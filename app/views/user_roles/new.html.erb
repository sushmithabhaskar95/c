<h1>Assign Roles to <%=params[:user_email ]%></h1>
<%= form_for UserRole.new, :html => { :class => "form-horizontal user" } do |f| %>
  <%= f.hidden_field :user_id, value: @user_id %>
      <div class="form-group">
        <%= f.label :Assign_Role, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10" >
           
        <%= f.select(:role_id, Role.all.map{|e| [e.name, e.id]},{ include_blank: "Please select"}, multiple: true ) %>

        </div>
        <%=f.error_span(:Assign_Role) %>
    </div>


    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  users_path, :class => 'btn btn-default' %>
      </div>
    </div>

  <% end %>